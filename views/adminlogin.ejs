<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs")  %>

<body onfocusout="hide()">
    <%- include("./partials/nav.ejs")  %>
    <form class="formpadding login adminlogin">
        <div class="mdc-button">
            <span class="mdc-button__label logintext">LogIn As Admin</span>
        </div>
        <div class="ip mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon">
            <i class="color material-icons mdc-text-field__icon">mail</i>
            <input id="email" type="email" class=" mdc-text-field__input" id="text-field-hero-input" required>
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="text-field-hero-input" class="mdc-floating-label">E-mail</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>
        <div class="ip mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon">
            <i class="color material-icons mdc-text-field__icon">lock</i>
            <input id="password" type="password" maxlength="16" minlength="8" class=" mdc-text-field__input"
                id="text-field-hero-input" required>
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="text-field-hero-input" class="mdc-floating-label">Password</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>
        <div class="oneline">
            <button type="submit" class="submit padd mdc-button mdc-button--raised">
                <div class="mdc-button__ripple"></div>
                <i class="loader material-icons mdc-button__icon" aria-hidden="true">admin_panel_settings</i>
                <span class="mdc-button__label cap">LogIn as Admin</span>
            </button>
            <a href="/" class="padd mdc-button mdc-button--outlined">
                <div class="mdc-button__ripple"></div>
                <i class="material-icons mdc-button__icon" aria-hidden="true">cancel</i>
                <span class="mdc-button__label cap">cancel</span>
            </a>
        </div>
    </form>
    <%- include("./partials/foot.ejs")  %>

</body>
<script src="/index.js"></script>
<script src="/adminlogon.js"></script>

</html>